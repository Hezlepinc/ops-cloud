{
  "commands": [
    {
      "name": "show live ops",
      "description": "Check current Cloudways + GitHub status from orchestrator",
      "run": [
        "curl -sS -H 'x-api-key:$OPENAI_API_KEY' https://ops-orchestrator.onrender.com/ai/live"
      ]
    },
    {
      "name": "test openai gpt-5",
      "description": "Call GPT-5 via orchestrator test route",
      "run": [
        "curl -s -H 'x-api-key:$OPENAI_API_KEY' https://ops-orchestrator.onrender.com/ai/test/openai | jq"
      ]
    },
    {
      "name": "purge varnish",
      "description": "Purge Varnish cache via orchestrator Cloudways action",
      "run": [
        "curl -s -X POST -H 'x-api-key:$OPENAI_API_KEY' -H 'Content-Type: application/json' -d '{\"app_id\":12345}' https://ops-orchestrator.onrender.com/ai/cloudways/purge | jq"
      ]
    },
    {
      "name": "get metrics",
      "description": "Fetch orchestrator cache metrics",
      "run": [
        "curl -s -H 'x-api-key:$OPENAI_API_KEY' https://ops-orchestrator.onrender.com/ai/metrics | jq"
      ]
    },
    {
      "name": "append audit event",
      "description": "Append an audit entry to ai_audit.json",
      "run": [
        "curl -s -X POST -H 'x-api-key:$OPENAI_API_KEY' -H 'Content-Type: application/json' -d '{\"event\":\"manual_check\",\"data\":{}}' https://ops-orchestrator.onrender.com/ai/audit | jq"
      ]
    },
    {
      "name": "read audit log",
      "description": "Read orchestrator audit log",
      "run": [
        "curl -s -H 'x-api-key:$OPENAI_API_KEY' https://ops-orchestrator.onrender.com/ai/audit | jq"
      ]
    },
    {
      "name": "check orchestrator status",
      "description": "Fetch live Cloudways + GitHub data from orchestrator",
      "run": [
        "curl -s -H 'x-api-key:$OPENAI_API_KEY' http://localhost:3000/ai/status | jq"
      ]
    },
    {
      "name": "restart orchestrator (local)",
      "description": "Restart local orchestrator service",
      "run": [
        "npm --prefix orchestrator run dev"
      ]
    },
    {
      "name": "verify orchestrator auth",
      "description": "Test x-api-key authentication",
      "run": [
        "curl -I http://localhost:3000/ai/status",
        "curl -I -H 'x-api-key:$OPENAI_API_KEY' http://localhost:3000/ai/status"
      ]
    },
    {
      "name": "check orchestrator logs",
      "description": "Stream orchestrator logs in real time",
      "run": [
        "tail -f orchestrator/logs/orchestrator.log"
      ]
    },
    {
      "name": "ping orchestrator (Render)",
      "description": "Check deployed orchestrator endpoint on Render",
      "run": [
        "curl -s -H 'x-api-key:$OPENAI_API_KEY' https://ops-orchestrator.onrender.com/ai/status | jq"
      ]
    },
    {
      "name": "deploy sparky staging",
      "description": "Deploy sparky-hq to staging via scripts/deploy.sh",
      "run": [
        "bash scripts/deploy.sh --site=sparky-hq --env=staging"
      ]
    },
    {
      "name": "deploy hezlep staging",
      "description": "Deploy hezlep-inc to staging via scripts/deploy.sh",
      "run": [
        "bash scripts/deploy.sh --site=hezlep-inc --env=staging"
      ]
    },
    {
      "name": "check wordpress health",
      "description": "Get Elementor and WP status for each brand",
      "run": [
        "curl -sS -H 'x-api-key:$OPENAI_API_KEY' https://ops-orchestrator.onrender.com/ai/wordpress/sparky-hq",
        "curl -sS -H 'x-api-key:$OPENAI_API_KEY' https://ops-orchestrator.onrender.com/ai/wordpress/hezlep-inc"
      ]
    },
    {
      "name": "check elementor kits",
      "description": "Verify Elementor kit versions for each site",
      "run": [
        "curl -sS -H 'x-api-key:$OPENAI_API_KEY' https://ops-orchestrator.onrender.com/ai/elementor/sparky-hq",
        "curl -sS -H 'x-api-key:$OPENAI_API_KEY' https://ops-orchestrator.onrender.com/ai/elementor/hezlep-inc"
      ]
    },
    {
      "name": "deploy staging",
      "description": "Trigger GitHub Action redeploy workflow",
      "run": [
        "curl -sS -X POST -H 'x-api-key:$OPENAI_API_KEY' -H 'Content-Type: application/json' -d '{\"brand\":\"sparky-hq\",\"environment\":\"staging\"}' https://ops-orchestrator.onrender.com/ai/deploy"
      ]
    },
    {
      "name": "start local wordpress",
      "description": "Start local Docker WordPress stack",
      "run": [
        "docker compose -f docs/docker-compose.yml up -d"
      ]
    },
    {
      "name": "restart orchestrator",
      "description": "Quick restart for orchestrator service (local dev)",
      "run": [
        "npm --prefix orchestrator run dev"
      ]
    }
  ]
}


