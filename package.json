{
  "name": "ops-cloud",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "dashboard:dev": "npm --prefix dashboard run dev",
    "dashboard:build": "npm --prefix dashboard run build",
    "dashboard:start": "npm --prefix dashboard run start",
    "build:themes": "echo 'No theme build yet'",
    "deploy": "bash scripts/deploy.sh",
    "deploy:hezlepinc": "pnpm run deploy -- --site=hezlepinc",
    "deploy:sparky": "pnpm run deploy -- --site=sparky",
    "build-cursor": "node scripts/build-cursor-theme.js",
    "design:theme-json": "node scripts/design/generate-theme-json.mjs",
    "design:cursor-css": "node scripts/design/generate-cursor-css.mjs",
    "design:build-pages": "node scripts/design/buildpages.mjs",
    "design:generate": "pnpm run design:theme-json && pnpm run design:cursor-css && pnpm run design:build-pages",
    "daily": "node scripts/daily.mjs",
    "docs:gpt:bundle": "node scripts/docs/build-gpt-bundle.js",
    "templates:validate": "node scripts/wp/validate-manifest.js templates/template.manifest.json",
    "templates:build-kit": "node scripts/wp/build-kit.js --manifest templates/template.manifest.json --out dist/kit.zip",
    "orchestrator:pre-dev-day-sync": "node scripts/orchestrator/pre-dev-day-sync.js"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.1",
    "dotenv-cli": "^7.3.0"
  }
}
