{
  "name": "ops-cloud",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "build:themes": "echo 'No theme build yet'",
    "deploy": "bash scripts/deploy.sh",
    "deploy:hezlepinc": "pnpm run deploy -- --site=hezlepinc",
    "deploy:sparky": "pnpm run deploy -- --site=sparky",
    "build-cursor": "node scripts/build-cursor-theme.js"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.1",
    "dotenv-cli": "^7.3.0"
  }
}
