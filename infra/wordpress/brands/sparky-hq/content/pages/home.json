  "content": "<!--\r\n  Sparky HQ - Hero Basic Pattern\r\n-->\r\n\r\n<!-- wp:group {\"className\":\"hero hero--primary section-surface\",\"layout\":{\"type\":\"constrained\"}} -->\r\n  <!-- wp:columns {\"verticalAlignment\":\"center\"} -->\r\n    <!-- wp:column -->\r\n      <!-- wp:heading {\"level\":1} -->\r\n      <h1>Electrical pros, on your schedule.</h1>\r\n      <!-- /wp:heading -->\r\n\r\n      <!-- wp:paragraph -->\r\n      <p>EV chargers, panel upgrades, and emergency repairs—done safely, cleanly, and on time.</p>\r\n      <!-- /wp:paragraph -->\r\n\r\n      <!-- wp:buttons -->\r\n        <!-- wp:button {\"className\":\"btn-primary\"} -->\r\n          <a class=\"wp-block-button__link btn-primary\" href=\"/contact\">Request a quote</a>\r\n        <!-- /wp:button -->\r\n      <!-- /wp:buttons -->\r\n    <!-- /wp:column -->\r\n\r\n    <!-- wp:column -->\r\n      <!-- wp:group {\"className\":\"hero-visual\",\"layout\":{\"type\":\"constrained\"}} -->\r\n        <!-- wp:paragraph -->\r\n        <p>Serving homeowners and property managers across Charlotte, NC.</p>\r\n        <!-- /wp:paragraph -->\r\n      <!-- /wp:group -->\r\n    <!-- /wp:column -->\r\n  <!-- /wp:columns -->\r\n<!-- /wp:group -->\n\n<!--\r\n  Sparky HQ - Value Pillars Pattern\r\n-->\r\n\r\n<!-- wp:group {\"className\":\"section-surface value-pillars\",\"layout\":{\"type\":\"constrained\"}} -->\r\n  <!-- wp:heading {\"level\":2} -->\r\n  <h2>Why homeowners choose Sparky HQ</h2>\r\n  <!-- /wp:heading -->\r\n\r\n  <!-- wp:paragraph -->\r\n  <p>Licensed electricians, clear communication, and tidy job sites — every visit, every time.</p>\r\n  <!-- /wp:paragraph -->\r\n\r\n  <!-- wp:columns {\"columns\":3} -->\r\n    <!-- wp:column -->\r\n      <!-- wp:group {\"className\":\"oc-card\",\"layout\":{\"type\":\"constrained\"}} -->\r\n        <!-- wp:heading {\"level\":3} -->\r\n        <h3>Safety first</h3>\r\n        <!-- /wp:heading -->\r\n        <!-- wp:paragraph -->\r\n        <p>We follow current code and manufacturer specs on every panel, circuit, and device.</p>\r\n        <!-- /wp:paragraph -->\r\n      <!-- /wp:group -->\r\n    <!-- /wp:column -->\r\n\r\n    <!-- wp:column -->\r\n      <!-- wp:group {\"className\":\"oc-card\",\"layout\":{\"type\":\"constrained\"}} -->\r\n        <!-- wp:heading {\"level\":3} -->\r\n        <h3>Respect for your home</h3>\r\n        <!-- /wp:heading -->\r\n        <!-- wp:paragraph -->\r\n        <p>Clean drop cloths, minimal disruption, and a walkthrough before we leave.</p>\r\n        <!-- /wp:paragraph -->\r\n      <!-- /wp:group -->\r\n    <!-- /wp:column -->\r\n\r\n    <!-- wp:column -->\r\n      <!-- wp:group {\"className\":\"oc-card\",\"layout\":{\"type\":\"constrained\"}} -->\r\n        <!-- wp:heading {\"level\":3} -->\r\n        <h3>On your schedule</h3>\r\n        <!-- /wp:heading -->\r\n        <!-- wp:paragraph -->\r\n        <p>Text updates, narrow arrival windows, and after‑hours support when it matters most.</p>\r\n        <!-- /wp:paragraph -->\r\n      <!-- /wp:group -->\r\n    <!-- /wp:column -->\r\n  <!-- /wp:columns -->\r\n<!-- /wp:group -->\n\n<!--\r\n  Sparky HQ - Services Grid Pattern\r\n-->\r\n\r\n<!-- wp:group {\"className\":\"services-grid section-surface\",\"layout\":{\"type\":\"constrained\"}} -->\r\n  <!-- wp:heading {\"level\":2} -->\r\n  <h2>Residential & Commercial Services</h2>\r\n  <!-- /wp:heading -->\r\n\r\n  <!-- wp:columns {\"columns\":3} -->\r\n    <!-- wp:column -->\r\n      <!-- wp:group {\"className\":\"oc-card\",\"layout\":{\"type\":\"constrained\"}} -->\r\n        <!-- wp:heading {\"level\":3} -->\r\n        <h3>Panel Upgrades</h3>\r\n        <!-- /wp:heading -->\r\n        <!-- wp:paragraph -->\r\n        <p>Modernize old panels to safely support today’s loads.</p>\r\n        <!-- /wp:paragraph -->\r\n      <!-- /wp:group -->\r\n    <!-- /wp:column -->\r\n\r\n    <!-- wp:column -->\r\n      <!-- wp:group {\"className\":\"oc-card\",\"layout\":{\"type\":\"constrained\"}} -->\r\n        <!-- wp:heading {\"level\":3} -->\r\n        <h3>EV Charger Installs</h3>\r\n        <!-- /wp:heading -->\r\n        <!-- wp:paragraph -->\r\n        <p>Level 2 home and fleet charging solutions, end-to-end.</p>\r\n        <!-- /wp:paragraph -->\r\n      <!-- /wp:group -->\r\n    <!-- /wp:column -->\r\n\r\n    <!-- wp:column -->\r\n      <!-- wp:group {\"className\":\"oc-card\",\"layout\":{\"type\":\"constrained\"}} -->\r\n        <!-- wp:heading {\"level\":3} -->\r\n        <h3>24/7 Emergency</h3>\r\n        <!-- /wp:heading -->\r\n        <!-- wp:paragraph -->\r\n        <p>On-call response for outages, shorts, and safety issues.</p>\r\n        <!-- /wp:paragraph -->\r\n      <!-- /wp:group -->\r\n    <!-- /wp:column -->\r\n  <!-- /wp:columns -->\r\n<!-- /wp:group -->\n\n<!--\r\n  Sparky HQ - Tools Highlight Pattern\r\n  Placeholder for most-used tools / calculators.\r\n-->\r\n\r\n<!-- wp:group {\"className\":\"section-surface tools-highlight\",\"layout\":{\"type\":\"constrained\"}} -->\r\n  <!-- wp:heading {\"level\":2} -->\r\n  <h2>Tools that help you plan the job</h2>\r\n  <!-- /wp:heading -->\r\n\r\n  <!-- wp:paragraph -->\r\n  <p>Use these calculators and guides to get a clear picture before you book a visit.</p>\r\n  <!-- /wp:paragraph -->\r\n\r\n  <!-- wp:columns {\"columns\":3} -->\r\n    <!-- wp:column -->\r\n      <!-- wp:group {\"className\":\"oc-card\",\"layout\":{\"type\":\"constrained\"}} -->\r\n        <!-- wp:heading {\"level\":3} -->\r\n        <h3>EV charger sizing</h3>\r\n        <!-- /wp:heading -->\r\n        <!-- wp:paragraph -->\r\n        <p>Estimate the panel capacity you need for Level 2 home charging.</p>\r\n        <!-- /wp:paragraph -->\r\n      <!-- /wp:group -->\r\n    <!-- /wp:column -->\r\n\r\n    <!-- wp:column -->\r\n      <!-- wp:group {\"className\":\"oc-card\",\"layout\":{\"type\":\"constrained\"}} -->\r\n        <!-- wp:heading {\"level\":3} -->\r\n        <h3>Panel upgrade planner</h3>\r\n        <!-- /wp:heading -->\r\n        <!-- wp:paragraph -->\r\n        <p>See when it’s time to replace or expand your main service panel.</p>\r\n        <!-- /wp:paragraph -->\r\n      <!-- /wp:group -->\r\n    <!-- /wp:column -->\r\n\r\n    <!-- wp:column -->\r\n      <!-- wp:group {\"className\":\"oc-card\",\"layout\":{\"type\":\"constrained\"}} -->\r\n        <!-- wp:heading {\"level\":3} -->\r\n        <h3>Emergency checklist</h3>\r\n        <!-- /wp:heading -->\r\n        <!-- wp:paragraph -->\r\n        <p>Step‑by‑step guidance for what to do before, during, and after an electrical issue.</p>\r\n        <!-- /wp:paragraph -->\r\n      <!-- /wp:group -->\r\n    <!-- /wp:column -->\r\n  <!-- /wp:columns -->\r\n<!-- /wp:group -->\n\n<!--\r\n  Sparky HQ - CTA Banner Pattern\r\n-->\r\n\r\n<!-- wp:group {\"className\":\"cta-banner\",\"layout\":{\"type\":\"constrained\"}} -->\r\n  <!-- wp:group {\"className\":\"oc-card\",\"layout\":{\"type\":\"constrained\"}} -->\r\n    <!-- wp:heading {\"level\":2} -->\r\n    <h2>Need an electrician?</h2>\r\n    <!-- /wp:heading -->\r\n    <!-- wp:paragraph -->\r\n    <p>Call now for fast scheduling, transparent pricing, and clean work.</p>\r\n    <!-- /wp:paragraph -->\r\n    <!-- wp:buttons -->\r\n      <!-- wp:button {\"className\":\"btn-primary\"} -->\r\n        <a class=\"wp-block-button__link btn-primary\" href=\"tel:123-456-7890\">Call now</a>\r\n      <!-- /wp:button -->\r\n    <!-- /wp:buttons -->\r\n  <!-- /wp:group -->\r\n<!-- /wp:group -->",
